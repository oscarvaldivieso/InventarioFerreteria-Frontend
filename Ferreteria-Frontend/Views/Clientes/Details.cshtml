@model Ferreteria_Frontend.Models.ClienteViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Context.Session.SetString("titulo", "Clientes");
}
<div class="col-sm-12">
<div class="card">
    <div class="card-header" style="display:flex; justify-content:space-between">
        <h1>Detalles</h1>
        <div>
            <a asp-action="Index" class="btn btn-warning" disable="disable">Volver</a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Clie_Id)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Clie_Id)
                </dd>
            </div>
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Clie_DNI)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Clie_DNI)
                </dd>
            </div>
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Clie_Nombre)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Clie_Nombre)
                </dd>
            </div>
        </dl>
        <dl class="row">
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Clie_Apellido)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Clie_Apellido)
                </dd>
            </div>
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Clie_Sexo)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Clie_Sexo)
                </dd>
            </div>
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.EstadoCivil)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.EstadoCivil)
                </dd>
            </div>
        </dl>
        <dl class="row">
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Municipio)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Municipio)
                </dd>
            </div>
            <div class="col-sm-4">
                <dt>
                    @Html.DisplayNameFor(model => model.Clie_Direccion)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Clie_Direccion)
                </dd>
            </div>
        </dl>
    </div>
</div>
<div class="row"></div>
<div class="card">
    <div class="card-header">
        <h3>Auditoria</h3>
    </div>
    <div class="card-body">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Accion</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th>Creacion</th>
                    <td>@Html.DisplayFor(model => model.UsuarioCreacion)</td>
                    <td>@Html.DisplayFor(model => model.Feca_Creacion)</td>
                </tr>
                <tr>
                    <th>Modificacion</th>
                    <td>@Html.DisplayFor(model => model.UsuarioModificacion)</td>
                    <td>@Html.DisplayFor(model => model.Feca_Modificacion)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
</div>
