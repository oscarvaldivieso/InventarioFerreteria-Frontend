@model CompraViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Context.Session.SetString("titulo", "Compras");
}

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-sm-12">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Prov_Id" class="control-label"></label>
                    <select asp-for="Prov_Id" class="form-select" asp-items="ViewBag.Prov_Id" required>
                        <option value="">Seleccione Un Proveedor</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="Comp_Fecha" class="control-label"></label>
                    <input type="date" asp-for="Comp_Fecha" class="form-control digits" required />
                </div>
            </div>  <!-- Cierra la fila después de dos campos -->
            <hr />
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="Prod_Id" class="control-label"></label>
                    <select asp-for="Prod_Id" class="form-select" asp-items="ViewBag.Prod_Id" id="Prod_Id">
                        <option value="">Seleccione Un Producto</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="CpDe_Cantidad" class="control-label"></label>
                    <input type="number" asp-for="CpDe_Cantidad" id="CpDe_Cantidad" class="form-control"/>
                    <br />
                </div>
            </div>  <!-- Cierra la fila después de dos campos -->
            <div class="row">
                <div class="form-group col-md-6">
                    <label asp-for="CpDe_Precio" class="control-label"></label>
                    <input asp-for="CpDe_Precio" id="CpDe_Precio" class="form-control"/>
                </div>
            </div>  <!-- Cierra la fila después de dos campos -->

            <div class="form-group d-flex justify-content-end mt-3">
                <button type="submit" id="btnGuardar" class="btn btn-primary mx-2"><i class="icofont icofont-save"></i> Guardar</button>
                <a asp-action="Index" class="btn btn-rounded btn-outline-primary btn-md mx-2"><i class="icofont icofont-close-circled"></i> Cancelar</a>
                <button type="button" id="btnDetalles" class="btn btn-secondary mx-2"><i class="icofont icofont-plus-circle"></i> Agregar Detalle</button>
            </div>

            <hr />

            <div class="list-product list-category">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="tablaIndex">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody id="detalleTableBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</form>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var btnAgregar = document.getElementById("btnDetalles");
        var tableBody = document.getElementById("detalleTableBody");

        btnAgregar.addEventListener("click", function () {
            var prodSelect = document.getElementById("Prod_Id");
            var prodId = prodSelect.value;
            var prodDescripcion = prodSelect.selectedOptions.length ? prodSelect.selectedOptions[0].text : "";
            var cantidad = document.getElementById("CpDe_Cantidad").value;
            var precio = document.getElementById("CpDe_Precio").value;

            if (prodId && cantidad && precio) {
                var index = tableBody.rows.length;

                var newRow = document.createElement("tr");

                newRow.innerHTML = `
                    <td>${escapeHtml(prodDescripcion)}
                        <input type="hidden" name="Detalles[${index}].Prod_Id" value="${escapeHtml(prodId)}" />
                        <input type="hidden" name="Detalles[${index}].Prod_Descripcion" value="${escapeHtml(prodDescripcion)}" />
                    </td>
                    <td>
                        ${escapeHtml(cantidad)}
                        <input type="hidden" name="Detalles[${index}].CpDe_Cantidad" value="${escapeHtml(cantidad)}" />
                    </td>
                    <td>
                        ${escapeHtml(precio)}
                        <input type="hidden" name="Detalles[${index}].CpDe_Precio" value="${escapeHtml(precio)}" />
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-danger btn-eliminar">Eliminar</button>
                    </td>
                `;

                tableBody.appendChild(newRow);

                // limpiar campos
                prodSelect.value = "";
                document.getElementById("CpDe_Cantidad").value = "";
                document.getElementById("CpDe_Precio").value = "";
            } else {
                alert("Por favor, complete todos los campos antes de agregar un detalle.");
            }
        });

        // Delegación de eventos para eliminar filas
        tableBody.addEventListener("click", function (e) {
            if (e.target && e.target.classList.contains("btn-eliminar")) {
                var row = e.target.closest("tr");
                if (row) {
                    row.remove();
                    reindexDetalles();
                }
            }
        });

        // Reindexa los nombres de los inputs hidden para que el model binding funcione
        function reindexDetalles() {
            var rows = tableBody.querySelectorAll("tr");
            for (var i = 0; i < rows.length; i++) {
                var inputs = rows[i].querySelectorAll("input[type='hidden']");
                inputs.forEach(function (inp) {
                    var m = inp.name.match(/^Detalles\[\d+\]\.(.+)$/);
                    if (m) {
                        inp.name = "Detalles[" + i + "]." + m[1];
                    }
                });
            }
        }

        // Simple escape para evitar inyección de HTML en el contenido de celdas
        function escapeHtml(text) {
            if (text === null || text === undefined) return "";
            return String(text)
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }
    });
</script>