@model Ferreteria_Frontend.Models.DepartamentoViewModel


<form asp-action="Edit" method="post" class="needs-validation custom-input was-validated">
<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="form-group col-md-6">
                <label asp-for="Depa_Codigo" class="control-label"></label>
                <input asp-for="Depa_Codigo" class="form-control" />
                <div class="invalid-feedback">Por favor rellena el campo </div>
                <div class="valid-feedback">Excelente </div>
                <span asp-validation-for="Depa_Codigo" class="text-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Depa_Descripcion" class="control-label"></label>
                <input asp-for="Depa_Descripcion" class="form-control" />
                <div class="invalid-feedback">Por favor rellena el campo </div>
                <div class="valid-feedback">Excelente </div>
                <span asp-validation-for="Depa_Descripcion" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group d-flex justify-content-end mt-3">
            <input type="submit" value="Insertar" class="btn btn-primary mx-2" />
            <input type="button" value="Regresar" id="btnCerrarEditar" class="btn btn-rounded btn-outline-primary btn-md mx-2" data-dismiss="modal" />
        </div>
    </div>
</div>
</form>