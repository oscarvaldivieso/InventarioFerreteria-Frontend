@model IEnumerable<ProductoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-sm-12">
    <div class="card">
        <div class="card-body">
            <button type="button" class="btn btn-rounded btn-outline-primary btn-md">
                <a asp-action="Create">
                    <i class="fa fa-plus"></i> Agregar Producto
                </a>
            </button>
            <div class="list-product list-category">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="tablaIndex">
                        <thead>
                            <tr>
                                <th>
                                    <span class="f-light f-w-600">Acciones</span>
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prod_Descripcion)
                                </th>
                                <th style="width: 15px;">
                                    @Html.DisplayNameFor(model => model.Marc_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Cate_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prov_Id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prod_Modelo)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Prod_Cantidad)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Medi_Id)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-primary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fa fa-gears"></i> Acciones</button>
                                        <ul class="dropdown-menu dropdown-block" style="">
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@item.Prod_Id">
                                                <i class="fa fa-edit"></i> Editar
                                            </a>
                                            <a class="dropdown-item" href="javascript:void(0);" onclick="eliminar(@item.Prod_Id)">
                                                <i class="fa fa-trash" aria-hidden="true"></i> Eliminar
                                            </a>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@item.Prod_Id">
                                                <i class="fa fa-info-circle"></i> Detalle
                                            </a>
                                        </ul>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prod_Descripcion)
                                </td>
                                <td style="width: 15px;">
                                    @Html.DisplayFor(modelItem => item.Marc_Descripcion)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Cate_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prov_Id)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prod_Modelo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Prod_Cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Medi_Id)
                                </td>
                            </tr>
                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/sweet-alert/sweetalert.min.js"></script>
<script src="~/js/js-datatables/simple-datatables@latest.js"></script>
<script src="~/js/datatable/datatables/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function(){
        $("#tablaIndex").DataTable();
    });

	//eliminar
    function eliminar(id) {
        localStorage.setItem("Prod_Id", id);
            swal({
                icon : "error",
                title: 'Eliminar',
                text: "¿Deseas eliminar este registro?",
                type: 'warning',
                buttons:{
                    confirm: {
                        text : 'Si, eliminar',
                        className : 'btn btn-danger'
                    },
                    cancel: {
                        visible: true,
                        className: 'btn btn-danger btn-border'
                    }
                }
            }).then((Delete) => {
                if (Delete) {
                    var id = localStorage.getItem("Prod_Id");
                    var url = "/Productos/Delete/" + id;
                    location.href = url;
                } else {
                    swal.close();
                }
            });
    }
</script>
