                                    <div class="form-group col-md-6">
                                        <label asp-for="Usua_Modificacion" class="control-label"></label>
                                        <input asp-for="Usua_Modificacion" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label asp-for="Feca_Modificacion" class="control-label"></label>
                                        <input asp-for="Feca_Modificacion" class="form-control" />
                                    </div>
                                    </div>  <!-- Cierra la fila después de dos campos -->
                                    <div class="row"> 
                                    <div class="form-group col-md-6">
                                        <label asp-for="Usua_Estado" class="control-label"></label>
                                        <input asp-for="Usua_Estado" class="form-control" />
                                    </div>
                        <div class="form-group d-flex justify-content-end mt-3">
                            <input type="submit" value="Insertar" class="btn btn-primary mx-2" />
