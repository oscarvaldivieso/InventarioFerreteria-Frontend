@model Ferreteria_Frontend.Models.UsuarioViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-sm-12">
<div class="card mb-0" style="border-radius: 20px; overflow: hidden;">
